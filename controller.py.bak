def fileRW(filename, method, content=''):
	if('r'==method):
		with open(filename, 'r') as hand:
			return hand.read()
	elif('w'==method):
		with open(filename, 'w') as hand:
			return hand.write(content)
	elif('a'==method):
		with open(filename, 'a') as hand:
			return hand.write(content)

